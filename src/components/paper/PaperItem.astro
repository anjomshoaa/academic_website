---
import { highlightAuthor } from "@/lib/utils";

const {paper} = Astro.props;
const {type, title, authors, year, volume, issue, pages, publisher, venue, doi, url} = paper.data;
---


<div class="card bg-base-200">
	<div class="card-body p-3">

		<h2 class="card-title m-0 text-xl">
		{title}
		</h2>
		<p class="text-base m-0">
		<span set:html={highlightAuthor(authors)} />
		</p>
		<p class="text-base m-0">
		<span class="italic">{venue}</span> â€¢ {year}
		</p>

<div class="flex space-x-2 justify-end m-0">

		{url && 
		<div class="card-actions">
			<a href={url} target="_blank" class="btn btn-sm btn-accent">
			Read Paper
			</a>
		</div>
		}

		<div class="card-actions">
			<a href={`/papers/cite/${paper.id}`} class="btn btn-sm btn-secondary ">
			BibTeX Citation
			</a>
		</div>
</div>


	</div>
</div>
