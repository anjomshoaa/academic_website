const posts = (await getCollection('blog')).sort(
	(a, b) => b.data.date.valueOf() - a.data.date.valueOf(),
);
console.log(posts);


const { page } = Astro.props
---

<Layout title='Blog'>
    <div>
		<h1 class='text-3xl font-bold mb-8'>Blog Posts</h1>
		<div class='grid gap-8'>
			{
				posts.map(post => (
					<article class='card bg-base-200 transition-all'>
						<div class='card-body'>
							<div class='flex justify-between items-start'>
								<h2 class='card-title text-xl'>
                            <a href={post.data.slug} class='hover:text-accent'>
										{post.data.title}
									</a>
								</h2>
								<div class='badge badge-accent badge-outline p-4'>
									{post.data.badge}
								</div>
							</div>
							<time datetime={post.date} class='text-sm text-base-content/71'>
								{new Date(post.date).toLocaleDateString('en-US', {
									year: 'numeric',
									month: 'long',
									day: 'numeric',
								})}
							</time>
							<p class='mt-4'>{post.excerpt}</p>
							<div class='card-actions justify-end'>
								<a
                            href={post.slug}
									class='btn btn-sm btn-secondary text-secondary-content'
								>
									Read More
								</a>
							</div>
						</div>
					</article>
				))
			}
		</div>

    </div>

</Layout>
